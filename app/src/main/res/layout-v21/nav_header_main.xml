<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/drawerbg"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom= "10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/drawerlogo"
        android:contentDescription="@string/logo_for_indiabix"
        tools:ignore="ContentDescription" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="7dp"
        android:text="@string/indiabix"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#33aacc11"
        android:background="@android:drawable/editbox_background_normal"
        android:textSize="13sp"
        android:text="@string/here_you_can_read_aptitude_questions_and_answers_for_your_interview_and_entrance_exams_preparation"
        tools:ignore="SmallSp" />

</LinearLayout>
